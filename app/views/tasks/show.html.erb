<h1>Task details</h1>

<ul>
  <li><strong>Title:</strong> <%= @task.title %></li>
  <li><strong>Details:</strong> <%= @task.details %></li>
  <% if @task.completed == false %>
  <li><strong>Status</strong> To do!</li>
  <% else %>
  <li><strong>Status</strong> Done</li>
  <% end %>
</ul>
<%= link_to 'edit', edit_task_path %>
<%= link_to 'delete', task_path(@task), method: :delete, data: { confirm: "Are you sure? Really?"} %>
<%= link_to 'back to the list', tasks_path %>
